= form_for(@account_request) do |f|
  
  - if @account_request.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.account_request.invalid_record')
      %ul
      - @account_request.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :email
    %br
    = f.text_field :email
  .field
    = f.label :first_name
    %br
    = f.text_field :first_name
  .field
    = f.label :last_name
    %br
    = f.text_field :last_name

  .actions
    = f.submit I18n.t('submit')
