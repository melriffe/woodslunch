- ordered = ordered_menu_item.id ? true : false
.menu_item{:id => "ordered_menu_item_#{ordered_menu_item.id}", :class => ordered ? 'existing' : '', 'data-index' => "#{i}", 'data-day' => "#{day.month_day}"}
  -#= hidden_field_tag("[student_order][orders_attributes][#{day.month_day}][ordered_menu_items_attributes][#{i}][_destroy]", '1')
  - if ordered
    = hidden_field_tag("[student_order][orders_attributes][#{day.month_day}][ordered_menu_items_attributes][#{i}][id]",
      ordered_menu_item.id,
      :id => "student_order_orders_attributes_#{day.month_day}_ordered_menu_items_attributes_#{i}_id")
  = hidden_field_tag("[student_order][orders_attributes][#{day.month_day}][ordered_menu_items_attributes][#{i}][menu_item_id]",
    menu_item.id,
    :id => "student_order_orders_attributes_#{day.month_day}_ordered_menu_items_attributes_#{i}_menu_item_id")
  = select_tag("[student_order][orders_attributes][#{day.month_day}][ordered_menu_items_attributes][#{i}][quantity]",
    options_for_select((1..OrderedMenuItem::MAX_DISPLAYED_QUANTITY), ordered_menu_item.quantity),
    {:id => "student_order_orders_attributes_#{day.month_day}_ordered_menu_items_attributes_#{i}_quantity", :include_blank => true})
  = menu_item.name
