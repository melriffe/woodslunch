!!! 5
%html
  %head
    %title Woods Charter School Lunch Program
    = csrf_meta_tag
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    = stylesheet_link_tag 'scaffold.css', :media => 'screen'
    /[if IE]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Droid+Serif'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Droid+Sans'
    = javascript_include_tag 'jquery-1.6.1.min.js'
    = javascript_include_tag 'rails.js'
    = yield :javascripts
  %body
    #wrapper
      #header
        = header_link
      = render 'shared/nav'
      #content_wrapper
        #content
          = render 'shared/flash_messages'
          = yield
      .push
        <!-- sticky footer push -->
    %footer
      #footer_content
        - if user_signed_in?
          %span#signed_in_as= "Signed in as #{current_user.email}"

