- form_for(@day_off) do |f|
  
  - if @day_off.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.day_off.invalid_record')
      %ul
      - @day_off.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :starts_on
    %br
    = f.date_select :starts_on
  .field
    = f.label :ends_on
    %br
    = f.date_select :ends_on
  .field
    = f.label :name
    %br
    = f.text_field :name

  .actions
    = f.submit I18n.t('submit')
