          = reports_for_grade(grade)
        = header_row(@menu_items, :menu_items_only => true, :cell_type => :td)
        - totals = totals_for(@orders, Student::MIDDLE_SCHOOL_GRADES)
        = totals_row(@menu_items, totals)


    #high.school
      %h3.school_header
        High School
        != '&mdash;'
